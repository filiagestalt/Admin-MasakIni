<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="10dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="278dp"
            android:paddingBottom="10dp"
            android:paddingTop="0dp">

            <ImageView
                android:id="@+id/cardView_main_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/dummy_img_resep" />

            <TextView
                android:id="@+id/cardView_JudulResep"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/cardView_main_image"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:text="Judul Resep"
                android:textColor="@color/nliveo_black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cardView_deksripsiResep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/cardView_JudulResep"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="0dp"
                android:singleLine="true"
                android:text="Deskripsi resep..."
                android:textColor="@color/greySubText"
                android:textSize="13sp"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/cardView_ic_waktuMemasak"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="16dp"
                android:background="@drawable/ic_duration" />

            <TextView
                android:id="@+id/cardView_waktuMemasak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/cardView_ic_waktuMemasak"
                android:layout_toRightOf="@+id/cardView_ic_waktuMemasak"
                android:text="30 menit"
                android:textColor="@color/greySubText"
                android:textSize="10sp" />


            <ImageView
                android:id="@+id/ic_difficulty"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/cardView_waktuMemasak"
                android:layout_toRightOf="@+id/cardView_waktuMemasak"
                android:background="@drawable/ic_difficulty" />

            <TextView
                android:id="@+id/cardView_tingkat_kesulitan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/ic_difficulty"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/ic_difficulty"
                android:layout_toRightOf="@+id/ic_difficulty"
                android:text="Sedang"
                android:textColor="@color/greySubText"
                android:textSize="10sp" />


            <ImageView
                android:id="@+id/ic_people"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/cardView_tingkat_kesulitan"
                android:layout_toRightOf="@+id/cardView_tingkat_kesulitan"
                android:background="@drawable/ic_people" />

            <TextView
                android:id="@+id/cardView_untukBerapaOrang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/ic_people"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/ic_people"
                android:layout_toRightOf="@+id/ic_people"
                android:text="5 orang"
                android:textColor="@color/greySubText"
                android:textSize="10sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>