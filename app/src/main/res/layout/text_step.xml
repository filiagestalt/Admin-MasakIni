<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.matrixxun.starry.badgetextview.MaterialBadgeTextView
        android:id="@+id/drawable_count_step"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@color/colorAccent"
        android:text="9"
        android:textColor="@color/baseWhite"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        app:mbtv_border_width="0dp"
        app:mbtv_type="shadow_alpha" />

    <TextView
        android:id="@+id/text_judul_step"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/drawable_count_step"
        android:layout_marginLeft="5dp"
        android:text="Siapkan bahan"
        android:textColor="@color/nliveo_black"/>

    <TextView
        android:id="@+id/text_penjelasan_step"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_judul_step"
        android:layout_alignLeft="@id/text_judul_step"
        android:paddingBottom="10dp"
        android:text="Begini cara menyiapkan bahan"/>
</RelativeLayout>