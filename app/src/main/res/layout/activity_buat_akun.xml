<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/baseWhite"
    android:theme="@style/AppTheme">

    <TextView
        android:id="@+id/textView"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="29dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="29dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        android:text="@string/buat_akun"
        android:textColor="@color/colorAccent"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.andreabaccega.widget.FormEditText
        android:id="@+id/etNama"
        android:layout_width="327dp"
        android:layout_height="45dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Masukkan Nama"
        android:inputType="textPersonName"
        android:text=""
        android:textSize="14sp"
        app:emptyErrorString="Masukkan nama lengkap anda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:testType="personFullName" />

    <com.andreabaccega.widget.FormEditText
        android:id="@+id/etEmail"
        android:layout_width="327dp"
        android:layout_height="45dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="17dp"
        android:ems="10"
        android:hint="Masukkan Alamat Email"
        android:inputType="textEmailAddress"
        android:textSize="14sp"
        app:emptyErrorString="Masukkan alamat email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etNama"
        app:testErrorString="Masukkan format dengan benar"
        app:testType="email" />

    <com.andreabaccega.widget.FormEditText
        android:id="@+id/etPassword"
        android:layout_width="327dp"
        android:layout_height="45dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="17dp"
        android:ems="10"
        android:hint="Masukkan Password"
        android:inputType="textPassword"
        android:text=""
        android:textSize="14sp"
        app:emptyErrorString="Masukkan password anda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etEmail"
        app:testErrorString="Password harus menggunakan huruf dan angka"
        app:testType="alphaNumeric" />

    <TextView
        android:id="@+id/textLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="175dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="175dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="10dp"
        android:text="Sudah Punya Akun? Login"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btBuatAkun" />

    <Button
        android:id="@+id/btBuatAkun"
        android:layout_width="327dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:background="@color/colorAccent"
        android:text="BUAT AKUN"
        android:textColor="@color/baseWhite"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etPassword" />
</android.support.constraint.ConstraintLayout>