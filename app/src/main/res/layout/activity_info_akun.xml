<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextColor="@android:color/white" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_view_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/text_view_email"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/text_view_email"
            android:layout_marginBottom="37dp"
            android:layout_marginLeft="45dp"
            android:layout_marginStart="45dp"
            android:text="011"
            android:textColor="@color/baseWhite" />

        <TextView
            android:id="@+id/namaLengkap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/text_view_nama"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/text_view_nama"
            android:layout_marginTop="30dp"
            android:paddingLeft="4dp"
            android:text="Nama Lengkap"
            android:textSize="12sp" />

        <EditText

            android:id="@+id/text_view_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/namaLengkap"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/noHP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/namaLengkap"
            android:layout_below="@+id/text_view_nama"
            android:paddingLeft="4dp"
            android:text="No. Handphone"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/et_no_handphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/noHP"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/text_view_nama"
            android:layout_alignStart="@+id/text_view_nama"
            android:layout_below="@+id/et_no_handphone"
            android:layout_marginTop="10dp"
            android:paddingLeft="4dp"
            android:text="Email"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/text_view_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/email"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/alamatLengkap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/text_view_email"
            android:layout_below="@id/text_view_email"
            android:layout_marginTop="10dp"
            android:paddingLeft="4dp"
            android:text="Alamat Lengkap"
            android:textSize="12sp" />

        <EditText
            android:text="@string/alamat_dummy"
            android:id="@+id/text_view_alamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/alamatLengkap"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="30dp"
            android:padding="5dp">

            <Button
                android:id="@+id/btn_simpan_infoakun"
                android:layout_width="match_parent"
                android:layout_height="@dimen/tinggiButton"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:background="@color/colorAccent"
                android:text="SIMPAN PERUBAHAN "
                android:textColor="@color/baseWhite"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/tinggiButton"
                android:layout_below="@id/btn_simpan_infoakun"
                android:layout_centerHorizontal="true"
                android:background="@color/colorAccent"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_keluar"
                    android:layout_width="347dp"
                    android:layout_height="47dp"
                    android:layout_below="@+id/btn_simpan_infoakun"
                    android:background="@color/baseWhite"
                    android:text="KELUAR"
                    android:textColor="@color/colorAccent"
                    />

            </LinearLayout>


        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>